<!DOCTYPE html>
<html>
  <head>
    <title>SelfOwn</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= render partial: 'layouts/bootstrap' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand mb-0 h1" href="/">Self-Own</a>

      <% if current_user.present? %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item ">
              <%= link_to 'test link', '/test_link', class: 'nav-link text-white' %>
            </li>
          </ul>
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <%= link_to 'Account', edit_user_path(current_user), class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Logout', destroy_user_session_path, class: 'nav-link text-white', method: :delete %>
            </li>
          </ul>
        </div>
      <% end %>
    </nav>

    <% if notice %>
      <div class="alert alert-success text-center"><%= notice %></div>
    <% end %>

    <% if alert %>
      <div class="alert alert-danger text-center"><%= alert %></div>
    <% end %>

    <div class="container-fluid" style="padding: 25px 15px;">

      <%= yield %>

    </div>
</html>

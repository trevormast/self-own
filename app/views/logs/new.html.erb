<div id="new-log-content" class="container text-center">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h2>NEW LOG FOR <%= @logged_item.name.upcase %></h2>

      <%= form_for [@logged_item, @new_log] do |f| %>
        <div class="form-group">
          <div class="row">
            <div class="col-md-6 offset-md-3">
              <%= f.label :value %>
              <%= f.text_field :value, class: 'form-control' %>
            </div>
          </div>
        </div>
        <br>
        <%= f.submit 'SAVE', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>


